# Application
APP_NAME=London Events Report
APP_ENV=development
DEBUG=True

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/london_events

# API Keys - Event Sources
TICKETMASTER_API_KEY=your_ticketmaster_api_key
EVENTBRITE_API_KEY=your_eventbrite_api_key
SEATGEEK_CLIENT_ID=your_seatgeek_client_id
SONGKICK_API_KEY=your_songkick_api_key

# AI Curation (optional â€” fallback logic runs without it)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Scheduling
REPORT_GENERATION_DAY_OF_WEEK=mon  # Day of week (mon, tue, wed, etc.)
REPORT_GENERATION_HOUR=9  # Hour in UTC
REPORT_GENERATION_TIMEZONE=Europe/London

# Sellout Detection
SELLOUT_THRESHOLD_PERCENTAGE=10  # Consider "selling out" if <10% tickets left
LOW_AVAILABILITY_THRESHOLD=50  # Show warning if <50 tickets left

# Web Scraping
SCRAPING_USER_AGENT=Mozilla/5.0 (compatible; LondonEventsBot/1.0)
SCRAPING_DELAY=2  # Seconds between requests
SCRAPING_TIMEOUT=30  # Request timeout in seconds

# Output
OUTPUT_DIR=output
